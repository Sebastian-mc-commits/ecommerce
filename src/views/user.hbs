<link rel="stylesheet" href="/public/styles/user.css">
<h3>Still working on this page</h3>

<div class="content">
    <div class="userContent">
        <img src="{{user.image}}" alt="Image">
        <p>{{user.name}}</p>
        <p>{{user.email}}</p>
    </div>
    <div class="optionsContent" id="optionsContent">
        <ul>
            {{#if user.isAdmin}}
            <li style="--clr:#336699">
                <p data-text="&nbsp;Created products" id="getProducts">&nbsp;Created products</p>
            </li>
            <li style="--clr:#0066cc">
                <p data-text="&nbsp;Updated products" id="getUpdatedProducts">&nbsp;Updated products&nbsp;</p>
            </li>
            <li style="--clr:#3399ff">
                <p data-text="&nbsp;Deleted products" id="getDeletedProducts">&nbsp;Deleted products&nbsp;</p>
            </li>
            {{/if}}
            {{#if user.isSuperAdmin}}
            <li style="--clr:#6699ff">
                <p data-text="&nbsp;Users set to admin" id="getAdmins">&nbsp;Users set to admin&nbsp;</p>
            </li>
            {{/if}}
            <li style="--clr:#3399ff">
                <p data-text="&nbsp;Settings" id="settings">&nbsp;Settings&nbsp;</p>
            </li>
            <li style="--clr:#9999ff">
                <p data-text="&nbsp;Order" id="getOrder">&nbsp;Order&nbsp;</p>
            </li>
            <li class="onLogOut">
                <button onclick="handleLogout()">Log out</button>
            </li>
        </ul>
    </div>
</div>
<script src="/public/js/user/user-admin-options.js"></script>
<script src="/public/js/user/user-settings.js"></script>
<script src="/public/js/user/user-oder.js"></script>
<script src="/public/js/user/index.js"></script>