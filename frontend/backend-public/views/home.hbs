<link rel="stylesheet" href="/public/styles/home.css" />

{{#if cookie}}
{{> tinyCarousel title="Products you might like." }}
{{/if}}

<main class="header">

  <h1>Products</h1>
  {{#if len}}
  <h3>Match: {{len}}</h3>
  {{/if}}

</main>

{{#> filters action="" method="GET" }}
<div class="grid w-10" id="handleContent">
  {{#each products}}
  <div class="card w-3">
    <img src={{this.thumbnail}} alt="Product Image" />
    <h1>{{this.title}}</h1>
    <p>Price: {{this.price}}</p>
    <p>Code: {{this.code}}</p>
    <p>Status: {{this.status}}</p>
    <p>Stock: {{this.stock}}</p>
    <p>Type: {{this.categoryType}}</p>
    <!--<a href="/cart/addToCart?title={{title}}&{{price}}&code={{code}}&sttus={{status}}&description={{description}}&tumbnail={{tumbnail}}">
            Add to cart
        </a>-->
    <button data-cart="{{this._id}}">
      {{!-- <a href="/cart/addToCart/{{this._id}}" class="text">Add to cart</a> --}}
      Add to cart
    </button>

    <button>
      <a href="/listContent/{{this._id}}" class="text">Watch more</a>
      Watch more
    </button>
  </div>
  {{/each}}
</div>
</div>
{{/filters}}

{{#if pagination}}
<div class="footer-content">
  {{#if sorter}}
  <p>{{sorter}}</p>
  {{/if}}
  {{> pagination}}
</div>
{{/if}}

<script src="/public/js/home.js"></script>